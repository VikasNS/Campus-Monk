<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
    <TextView android:textSize="17sp" android:id="@+id/date" android:layout_width="0dp" android:layout_height="wrap_content" android:text="01-12-17" android:layout_weight="1"/>
    <View android:background="#e8e8e8" android:layout_width="1dp" android:layout_height="match_parent"/>
    <TextView android:textSize="17sp" android:id="@+id/day" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Friday" android:layout_weight="1"/>
    <View android:background="#e8e8e8" android:layout_width="1dp" android:layout_height="match_parent"/>
    <TextView android:textSize="17sp" android:id="@+id/title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="Christmas" android:layout_weight="1"/>
</LinearLayout>
