<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/login_form_usn_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:hint="USN" android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/login_form_DOB_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:hint="YYYY-MM-DD" android:singleLine="true" android:inputType="phone"/>
    </android.support.design.widget.TextInputLayout>
    <Button android:layout_gravity="center" android:id="@+id/login_form_submit_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LOGIN"/>
</LinearLayout>
