<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp">
    <TextView android:layout_gravity="center" android:id="@+id/unit_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@+id/download_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Download"/>
        <Button android:id="@+id/sell_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sell"/>
        <Button android:id="@+id/buy_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buy"/>
    </LinearLayout>
</LinearLayout>
